<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :description, class: "control-label" %>
    <%= text_input f, :description, class: "form-control" %>
    <%= error_tag f, :description %>
  </div>

  <div class="form-group">
    <%= label f, :artist_categories_id, class: "control-label" %>
    <%= text_input f, :artist_categories_id, class: "form-control" %>
    <%= error_tag f, :artist_categories_id %>
  </div>

  <div class="form-group">
    <%= label f, :photo_url, class: "control-label" %>
    <%= file_input f, :photo_url, placeholder: "Photo", required: true, accept: "image/*" %>
    <%= error_tag f, :photo_url %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
