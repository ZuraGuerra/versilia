<section id="featured-frames">
  <h2>¿Qué quieres leer?</h2>
  <%= for frame <- @frames do %>
    <style>
      .demo-card-square.mdl-card {
        width: 320px;
        height: 320px;
      }
      .demo-card-square > .mdl-card__title {
        color: #fff;
        background: url('<%= first_frame_photo_url(frame.frame_photos) %>');
        background-size: cover;
        background-position:center;
      }
    </style>

    <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text"><%= frame.name %></h2>
      </div>
      <div class="mdl-card__supporting-text"><%= frame.description %></div>
      <div class="mdl-card__supporting-text">
        <%= for frame_mood <- frame.frame_moods do %>
          <span class="mdl-chip">
            <span class="mdl-chip__text"><%= frame_mood.mood.name %></span>
          </span>
        <% end %>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
          VER MÁS
        </a>
      </div>
    </div>
  <% end %>

</section>
